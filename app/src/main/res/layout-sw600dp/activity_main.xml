<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:baselineAligned="false"
		android:divider="?android:attr/dividerHorizontal"
		android:fitsSystemWindows="true"
		android:orientation="horizontal"
		android:showDividers="middle"
		tools:context=".presentation.userlist.MainActivity">

	<fragment
			android:id="@+id/user_list_fragment"
			android:layout_height="match_parent"
			android:layout_width="@dimen/list_fragment_width"
			android:name="com.jmlb0003.randomcoapp.presentation.userlist.UsersFragment"
			tools:layout="@layout/item_list_user"/>

	<FrameLayout
			android:id="@+id/user_favorites"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1"/>

</LinearLayout>
